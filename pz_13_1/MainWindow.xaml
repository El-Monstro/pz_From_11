<Window x:Class="pz_13_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pz_13_1"
        mc:Ignorable="d"
       Title="Мое Финансовое Приложение" Height="350" Width="525">
    <Grid>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontSize="16" Text="Баланс счета:"/>
        <TextBox x:Name="BalanceTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="113,13,0,0" Width="100" IsReadOnly="True" Text="0.00"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" FontSize="16" Text="Сумма операции:"/>
        <TextBox x:Name="AmountTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,50,0,0" Width="100"/>

        <Button Content="Пополнить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" Width="75" Click="DepositButton_Click"/>
        <Button Content="Снять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,90,0,0" Width="75" Click="WithdrawButton_Click"/>
        <Button Content="Отменить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,90,0,0" Width="75" Click="UndoButton_Click"/>
    </Grid>
</Window>
